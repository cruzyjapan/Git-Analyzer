{
  "repository": {
    "fetchOnInit": true,
    "maxCommitHistory": 500,
    "defaultBranch": "main"
  },
  "analysis": {
    "includeTests": true,
    "ignorePatterns": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "*.log"
    ],
    "criticalFiles": [
      "package.json",
      "package-lock.json",
      "yarn.lock",
      ".env*",
      "**/config/**",
      "**/security/**",
      "**/auth/**"
    ]
  },
  "ai": {
    "defaultCLI": "claude",
    "timeout": 30000,
    "retryAttempts": 3,
    "enableMockMode": true
  },
  "output": {
    "defaultFormat": "markdown",
    "defaultEncoding": "utf8",
    "reportsDirectory": ".git-analyzer/reports",
    "includeTimestamp": true,
    "compressOldReports": true
  },
  "security": {
    "allowWrites": false,
    "blockDangerousCommands": true,
    "auditLogging": true,
    "sanitizeInput": true
  },
  "performance": {
    "enableCaching": true,
    "cacheDirectory": ".git-analyzer/cache",
    "cacheTTL": 3600000,
    "maxParallelOperations": 5
  },
  "logging": {
    "level": "info",
    "directory": ".git-analyzer/logs",
    "maxFileSize": 5242880,
    "maxFiles": 5,
    "enableConsole": false
  }
}